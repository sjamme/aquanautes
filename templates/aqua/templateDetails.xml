<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN"
        "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<install version="1.6" type="template" client="site">
    <name>aqua</name>
    <version>1.6.0</version>
    <creationDate>07 May 2011</creationDate>
    <author>Olivier Antibi</author>
    <authorEmail>lechenapan@gmail.com</authorEmail>
    <authorUrl>http://www.lesaquanautes.eu</authorUrl>
    <copyright>Copyright (C) 2012 - Les Aquanautes - All rights reserved.</copyright>
    <license>free</license>
    <description><![CDATA[
	<h1>Les Aquanautes</h1>
	<img src="../templates/aqua/template_thumbnail.png" align="left" hspace="10" style="padding-right:10px;"/>
	<b>Free Joomla 1.6 Template developed by Chenapan, for the web site <a target="_blank" href="http://www.aquanautes.eu">Les Aquanautes</a>.
	<br /><br />Copyright &copy; 2012 - Les Aquanautes - All rights reserved.</b>
	]]></description>
    <files>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <filename>component.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <positions>
        <position>debug</position>
        <position>position-0</position>
        <position>position-1</position>
        <position>position-2</position>
        <position>position-3</position>
        <position>position-4</position>
        <position>position-5</position>
        <position>position-6</position>
        <position>position-7</position>
        <position>position-8</position>
        <position>position-9</position>
        <position>position-10</position>
        <position>position-11</position>
        <position>position-12</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="advanced">

                <field name="colorVariation" type="list" default="bluedarkblue" label="Color Variation"
                       description="Color variation to use">
                    <option value="reddarkblue">Red Dark-Blue</option>
                    <option value="orangedarkblue">Orange Dark-Blue</option>
                    <option value="bluedarkblue">Blue Dark-Blue</option>
                </field>

                <field name="hideLogo" type="radio" default="0" label="Hide Logo" description="Hide the logo.">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

                <field name="logoVariation" type="list" default="3" label="Logo Variation"
                       description="Logo variation to use">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </field>

                <field name="logo" type="media"
                       label="Logo"
                       description="Please choose an image. If you do not want to display a logo, click on Select, do not highlight any image and then click on Insert in the modal window"/>

                <field name="banner" type="imagelist"
                       label="Banner" description="Please choose an image, it will be the default image if flash is not supported" directory="templates/aqua/images" filter="\.gif$|\.jpg$" default="banner.jpg"/>

                <field name="annimatedBanner" type="imagelist"
                       label="Animated Banner" description="Please choose a flash animation..." directory="templates/aqua/images" filter="\.swf$" default="banner.swf"/>

                <field name="bannerType" type="radio" default="1" label="Choose the banner type"
                       description="Choose between a static image or an animated flash animation">
                    <option value="0">Image</option>
                    <option value="1">Animation</option>
                </field>

                <field name="sitetitle" type="text" default="Les Aquanautes"
                       label="Site Title"
                       description="Please add your site title here, it's only displayed if you don't use a logo"
                       filter="string"/>

            </fieldset>
        </fields>
    </config>
</install>

